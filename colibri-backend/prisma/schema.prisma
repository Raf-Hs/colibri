generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TripStatus {
  PENDIENTE
  EN_CURSO
  FINALIZADO
  CANCELADO
}

model Usuario {
  id        Int     @id @default(autoincrement())
  nombre    String
  email     String  @unique
  telefono  String
  password  String
  rol       String  // "viajero" | "conductor" | "ambos" (flexible)
  createdAt DateTime @default(now())
  viajes    Viaje[] @relation("UsuarioViajes")
  reseñasRecibidas Reseña[] @relation("ReseñasRecibidas")
  reseñasDadas     Reseña[] @relation("ReseñasDadas")
}

model Viaje {
  id          Int        @id @default(autoincrement())
  origen      String
  destino     String
  costo       Int
  metodoPago  String      // "efectivo" (por ahora)
  estado      TripStatus  @default(PENDIENTE)
  calificacion Int?       // 1..5 (deprecated - usar Reseña)
  conductor   String
  usuarioId   Int
  usuario     Usuario     @relation("UsuarioViajes", fields: [usuarioId], references: [id])
  createdAt   DateTime    @default(now())
  reseñas     Reseña[]
}

model Reseña {
  id             Int      @id @default(autoincrement())
  calificacion   Int      // 1..5
  comentario     String?
  tipoReseña     String   // "pasajero_a_conductor" | "conductor_a_pasajero"
  viajeId        Int
  viaje          Viaje    @relation(fields: [viajeId], references: [id])
  autorId        Int      // quien hace la reseña
  autor          Usuario  @relation("ReseñasDadas", fields: [autorId], references: [id])
  receptorId     Int      // quien recibe la reseña
  receptor       Usuario  @relation("ReseñasRecibidas", fields: [receptorId], references: [id])
  createdAt      DateTime @default(now())

  @@unique([viajeId, autorId, tipoReseña])
}